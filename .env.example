# ════════════════════════════════════════════════════════════
# GuideFarm Bot - Environment Variables Template
# ════════════════════════════════════════════════════════════

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ (Required)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Telegram Bot Token (получить у @BotFather)
# Как получить:
# 1. Открыть @BotFather в Telegram
# 2. Отправить команду /newbot
# 3. Следовать инструкциям
# 4. Скопировать токен сюда
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AI PROVIDERS (минимум один обязателен)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# OpenAI GPT-4o (рекомендуется для премиум контента)
# Получить: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_key_here

# Google Gemini 1.5 Flash (быстрая генерация, БЕСПЛАТНО)
# Получить: https://ai.google.dev
GEMINI_API_KEY=your_gemini_key_here

# xAI Grok 3 (креативный контент)
# Получить: https://x.ai/api
XAI_API_KEY=xai-your_key_here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# OZON API (опционально для публикации на Ozon)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Ozon Seller API credentials
# Получить: https://seller.ozon.ru/app/settings/api-keys
OZON_CLIENT_ID=your_client_id
OZON_API_KEY=your_api_key

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# WEB APP (для мини-приложения Telegram)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# URL для Telegram Web App (укажите ваш домен после деплоя)
# Примеры:
# - https://your-app.railway.app/webapp
# - https://your-app.render.com/webapp
# - https://your-domain.com/webapp
WEBAPP_URL=https://your-domain.com/webapp

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ADMIN (опционально)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Telegram ID администратора (для команды /admin)
# Узнать свой ID: отправить любое сообщение @userinfobot
ADMIN_ID=your_telegram_id

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SUPABASE DATABASE (автоматически настраивается в bolt.new)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ════════════════════════════════════════════════════════════
# ИНСТРУКЦИИ:
# 1. Скопируйте этот файл в .env
# 2. Заполните обязательные переменные (TELEGRAM_BOT_TOKEN + минимум один AI ключ)
# 3. После деплоя обновите WEBAPP_URL на реальный URL
# 4. НЕ коммитьте .env файл в Git!
# ════════════════════════════════════════════════════════════
